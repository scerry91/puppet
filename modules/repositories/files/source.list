debianver=`lsb_release -cs`
<% if location == "Huricane Electric" -%>
deb http://linux.csua.berkeley.edu/debian/ <%= debianver %> main contrib non-free
deb-src http://linux.csua.berkeley.edu/debian/ <%= debianver %> main contrib non-free
<% elsif debianver == "lenny" -%>
deb http://archive.debian.org/debian <%= debianver %> main contrib non-free
deb-src http://archive.debian.org/debian <%= debianver %> main contrib non-free
deb http://archive.debian.org/debian-security <%= debianver %>/updates main contrib non-free
deb-src http://archive.debian.org/debian-security <%= debianver %>/updates main contrib non-free
deb http://archive.debian.org/debian-volatile <%= debianver %>/volatile main contrib non-free
deb-src http://archive.debian.org/debian-volatile <%= debianver %>/volatile main contrib non-free
<% else -%>
deb http://mirror.bytemark.co.uk/debian/ <%= debianver %> main contrib non-free
deb-src http://mirror.bytemark.co.uk/debian/ <%= debianver %> main contrib non-free
deb http://security.debian.org/ <%= debianver %>/updates main contrib non-free
deb-src http://security.debian.org/ <%= debianver %>/updates main contrib non-free
<% end -%>
<% if debianver != "lenny" -%>
deb http://mirror.bytemark.co.uk/debian/ <%= debianver %>-updates main
deb-src http://mirror.bytemark.co.uk/debian/ <%= debianver %>-updates main
<% end -%>
<% if debianver == "squeeze" -%>
# LTS addin for squeeze servers
deb http://mirror.bytemark.co.uk/debian  squeeze-lts main contrib non-free
deb-src http://mirror.bytemark.co.uk/debian  squeeze-lts main contrib non-free
<% end -%>
<% if classes.include?('repositories::backports') -%>
<% if debianver == "lenny" -%>
deb http://archive.debian.org/debian-backports <%= debianver %>-backports main contrib non-free
<% end -%>
<% if debianver == "squeeze" -%>
deb http://backports.debian.org/debian-backports squeeze-backports main
<% end -%>
<% if debianver == "wheezy" -%>
deb http://mirror.bytemark.co.uk/debian/ wheezy-backports main contrib non-free
<% end -%>
<% if debianver == "jessie" -%>
deb http://mirror.bytemark.co.uk/debian/ jessie-backports main contrib non-free
<% end -%>
<% end -%>

