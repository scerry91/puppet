#!/bin/bash
debianver=`lsb_release -cs`
if [ "debianver" = "wheezy" ]; then
echo "wheezy" >> /etc/apt/source.list
echo "wheezy" >> /etc/apt/source.list
elif [ "debianver" = "squeezy" ]; then
echo "squeeze" >> /etc/apt/source.list
echo "squeezy" >> /etc/apt/source.list
else
echo "jessie" >> /etc/apt/source.list
echo "jessie" >> /etc/apt/source.list
fi
